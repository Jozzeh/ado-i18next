<!DOCTYPE html>
<html lang="en">
  <head>
    <title>
      Translations
    </title>

    <script src="https://cdn.tailwindcss.com">
      
    </script>
  </head>
  <body>

    <div class="container mx-auto mt-8">
      <div>
        <table class="table-auto w-full border-collapse divide-y divide-gray-300">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-xs uppercase ">
                Id
              </th>
              <th class="px-6 py-3 text-xs uppercase ">
                Language
              </th>
              <th class="px-6 py-3 text-xs uppercase ">
                Key
              </th>
              <th class="px-6 py-3 text-xs uppercase ">
                Translation
              </th>
              <th class="px-6 py-3 text-xs uppercase ">
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            @each(translation in translations)
              <tr class="whitespace-nowrap">
                <td class="px-6 py-4">
                  {{ translation.id }}
                </td>
                <td class="px-6 py-4">
                  {{ translation.language }}
                </td>
                <td class="px-6 py-4">
                  {{ translation.key }}
                </td>
                <td class="px-6 py-4">
                  {{ translation.value }}
                </td>
                <td class="px-6 py-4">
                  <a
                    class="bg-grey-100 hover:bg-grey-300 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                    href="{{ route('translations.edit', { language:translation.language , id: translation.id }) }}"
                  >edit</a>
                </td>
              </tr>
            @endeach
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
