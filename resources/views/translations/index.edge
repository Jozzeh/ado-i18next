<!DOCTYPE html>
<html lang="en">
  <head>
    <title>
      Translations
    </title>

    <script src="https://cdn.tailwindcss.com">
      
    </script>
  </head>
  <body>

    <div class="container mx-auto mt-8">
      <div class="mb-4">
        <label for="languageSelect" class="mr-2 font-medium">Filter by Language:</label>
        <select
          id="languageSelect"
          class="border px-2 py-1"
          onChange="
                if (this.value) {
                  window.location.href = '/view/translations/' + this.value
                } else {
                  window.location.href = '/view/translations'
                }
              "
        >
          <option value="">
            All
          </option>

          @each(lang in languages)
            <option value="{{ lang }}" {{ language && language.toUpperCase() === lang ? 'selected' : '' }}>
              {{ lang }}
            </option>
          @endeach
        </select>
      </div>
      <div>
        <table class="table-auto w-full border-collapse divide-y divide-gray-300">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-xs uppercase ">
                Id
              </th>
              <th class="px-6 py-3 text-xs uppercase ">
                Language
              </th>
              <th class="px-6 py-3 text-xs uppercase ">
                Key
              </th>
              <th class="px-6 py-3 text-xs uppercase ">
                Translation
              </th>
              <th class="px-6 py-3 text-xs uppercase ">
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            @each(translation in translations)
              <tr class="whitespace-nowrap">
                <td class="px-6 py-4">
                  {{ translation.id }}
                </td>
                <td class="px-6 py-4">
                  {{ translation.language }}
                </td>
                <td class="px-6 py-4">
                  {{ translation.key }}
                </td>
                <td class="px-6 py-4">
                  {{ translation.value }}
                </td>
                <td class="px-6 py-4">
                  <a
                    class="bg-grey-100 hover:bg-grey-300 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                    href="{{ route('translations.edit', { language:translation.language , id: translation.id }) }}"
                  >edit</a>
                </td>
              </tr>
            @endeach
          </tbody>
        </table>
      </div>

      <div class="flex items-center gap-4 mt-4">
        @if(translations.currentPage > 1)
          <a
            class="text-blue-500 underline"
            href="
              @if(currentLanguage)
                /view/translations/{{ currentLanguage }}?page={{ translations.currentPage - 1 }}
              @else
                /view/translations?page={{ translations.currentPage - 1 }}
              @endif
            "
          >
            Previous
          </a>
        @endif
        
        
        <span>
          Page {{ translations.currentPage }} of {{ translations.lastPage }}
        </span>

        @if(translations.currentPage < translations.lastPage)
          <a
            class="text-blue-500 underline"
            href="
              @if(currentLanguage)
                /view/translations/{{ currentLanguage }}?page={{ translations.currentPage + 1 }}
              @else
                /view/translations?page={{ translations.currentPage + 1 }}
              @endif
            "
          >
            Next
          </a>
        @endif
      </div>
    </div>
  </body>
</html>
